generator client {
  provider = "prisma-client-js"
  output   = "../prisma-client" // Think about the path structure
}

// TODO: Configure the datasource block
// - What database provider are you using for development?
// - Where should the database file be located?
datasource db {
  provider = "sqlite" // Consider what you'll use for production
  url      = "file:../dev.db" // Think about the relative path
}

